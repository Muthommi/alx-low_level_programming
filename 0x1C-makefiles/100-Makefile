CC = gcc

CFLAGS = -Wall -Werror -Wextra -pedantic

SRC = $(wildcard*.c)

OBJ = $(SRC:.c=.o)

NAME = school

RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(NAME) *~ \#*

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

$(OBJ): $(SRC) m.h

.PHONY: all clean oclean fclean re
